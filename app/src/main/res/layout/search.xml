<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#222224"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:layout_height="30dp"
        android:inputType="textPersonName"
        android:hint="Enter key word to search item..."
        android:textColor="#000000"
        android:text=""
        android:background="#ffff"
        android:ems="10"
        android:layout_marginTop="41dp"
        android:id="@+id/key"
        android:layout_width="350dp"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/key"
        android:layout_alignLeft="@+id/key"
        android:layout_alignStart="@+id/key"
        android:layout_marginLeft="46dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="42dp"
        android:id="@+id/button4"
        android:background="#008000"
        android:onClick="search" />

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button4"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5"
        android:id="@+id/button5"
        android:background="#FF0000"
        android:onClick="finishSearchActivity" />


    <TextView
        android:text="Search Item"
        android:textColor="#ffff"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textSize="30dp"
        android:layout_marginTop="34dp"
        android:id="@+id/textView5"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/sjsu_logo"
        android:id="@+id/imageView3"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/key"
        android:layout_alignStart="@+id/key"
        android:layout_marginTop="19dp" />

    <TextView
        android:text=" Search results will appear below:"
        android:id="@+id/display"
        android:textSize="20dp"
        android:background="#bbbbbb"
        android:textColor="#000"
        android:layout_width="350dp"
        android:layout_below="@+id/button4"
        android:layout_alignLeft="@+id/key"
        android:layout_alignStart="@+id/key"
        android:layout_marginTop="15dp"
        android:layout_height="250dp" />

</RelativeLayout>