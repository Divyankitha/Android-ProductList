<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#004958"
    tools:context="com.example.divyankitharaghavaurs.product.MainActivity">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/sjsu_logo"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/textView"
        android:layout_toStartOf="@+id/textView" />

    <Button
        android:text="Search Item"
        android:layout_height="75dp"
        android:id="@+id/search"
        android:layout_width="200dp"
        android:layout_marginLeft="49dp"
        android:layout_marginStart="49dp"
        android:layout_marginBottom="83dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#FFFACD"
        android:onClick="gotoSearchActivity" />

    <Button
        android:text="Insert New Item"
        android:layout_marginTop="76dp"
        android:id="@+id/insert"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/search"
        android:layout_alignStart="@+id/search"
        android:background="#FFFACD"
        android:onClick="gotoInsertActivity" />

    <ImageView
        android:layout_height="50dp"
        app:srcCompat="@drawable/arrow"
        android:id="@+id/imageView5"
        android:layout_width="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_alignTop="@+id/insert"
        android:layout_toRightOf="@+id/insert"
        android:layout_toEndOf="@+id/insert" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/search_logo"
        android:id="@+id/imageView4"
        android:layout_alignTop="@+id/search"
        android:layout_alignLeft="@+id/imageView5"
        android:layout_alignStart="@+id/imageView5" />

    <TextView
        android:text="New Product Database"
        android:textColor="#ffff"
        android:textSize="30dp"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp" />

</RelativeLayout>
