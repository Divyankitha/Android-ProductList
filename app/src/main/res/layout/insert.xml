<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#222224"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="Item Name:"
        android:textColor="#ffff"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="78dp"
        android:id="@+id/textView3"
        android:layout_width="110dp"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:text="Item Description:"
        android:textColor="#ffff"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/textView3"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3"
        android:layout_width="155dp" />

    <TextView
        android:text="Item Price:"
        android:textColor="#ffff"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_width="97dp"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4" />

    <TextView
        android:text="Item Review:"
        android:textColor="#ffff"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignEnd="@+id/textView6"
        android:layout_marginTop="31dp"
        android:id="@+id/textView7" />

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="51dp"
        android:layout_marginStart="51dp"
        android:id="@+id/button2"
        android:layout_below="@+id/review"
        android:layout_alignLeft="@+id/review"
        android:layout_alignStart="@+id/review"
        android:layout_marginTop="64dp"
        android:background="#FF0000"
        android:onClick="finishInsertActivity" />

    <Button
        android:text="Add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_alignBaseline="@+id/button2"
        android:layout_alignBottom="@+id/button2"
        android:layout_toRightOf="@+id/imageView2"
        android:background="#008000"
        android:onClick="insert" />

    <EditText
        android:inputType="textPersonName"
        android:hint="Good/Bad..."
        android:background="#ffff"
        android:ems="10"
        android:id="@+id/review"
        android:layout_height="25dp"
        android:layout_width="180dp"
        android:layout_alignBottom="@+id/textView7"
        android:layout_toRightOf="@+id/textView7"
        android:layout_toEndOf="@+id/textView7" />

    <EditText
        android:layout_height="25dp"
        android:inputType="number"
        android:background="#ffff"
        android:hint=" $..."
        android:ems="10"
        android:id="@+id/price"
        android:layout_width="180dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/textView6"
        android:layout_toEndOf="@+id/textView6" />

    <EditText
        android:inputType="textPersonName"
        android:hint="Description..."
        android:background="#ffff"
        android:ems="10"
        android:id="@+id/description"
        android:layout_height="25dp"
        android:layout_width="180dp"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4" />

    <EditText
        android:inputType="textPersonName"
        android:hint="Name..."
        android:background="#ffff"
        android:ems="10"
        android:id="@+id/name"
        android:layout_height="25dp"
        android:layout_width="180dp"
        android:layout_alignTop="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />

    <TextView
        android:text="Add New Product Item"
        android:textColor="#ffff"
        android:layout_height="50dp"
        android:textSize="30dp"
        android:layout_marginTop="28dp"
        android:id="@+id/textView2"
        android:layout_width="310dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:src="@drawable/sjsu_logo"
        android:id="@+id/imageView2"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_above="@+id/textView3"
        android:layout_toLeftOf="@+id/textView7"
        android:layout_toStartOf="@+id/textView7" />
</RelativeLayout>